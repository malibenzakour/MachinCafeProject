<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MachineCafeProject.Views.PayementView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Chocolate" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="0" Margin="0,0,0,0">
            <Label 
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,30"
                   FontAttributes="Bold"
                   Text="MONTANT TOTAL DE VOTRE SELECTION:"
                   FontSize="30" />
            <Label 
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,30"
                   FontAttributes="Bold"
                    TextColor="Silver"
                   x:Name="Prix"
                   FontSize="40" />

            <Label 
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,30"
                   FontAttributes="Italic"
                   Text="MERCI DE PROCEDER AU REGLEMENT"
                   FontSize="25" />
            <Button Text="PAYER"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked" />
            <Image Source="cafe3.jpeg" WidthRequest="20" HeightRequest="300"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
